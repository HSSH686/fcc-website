---
import { codeWarsChallenges } from "../data/codewarsChallenges";
import CodeChallengeCard from "./CodeChallengeCard.astro";

---

<div class="mx-auto grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 w-4/5 gap-5">
    {
        codeWarsChallenges.map((challenge) => (
            <CodeChallengeCard
                title={challenge.title}
                href={challenge.link}
                difficulty="Beginner"
            />
        ))
    }
</div>